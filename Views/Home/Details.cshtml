@model HomeDetailsViewModel

@{
  ViewBag.PageTitle = "User Account Details";
  var imagePath = "~/images/" + "banner.jpg";
}


<div class="row justify-content-center m-3">
  <div class="col-sm-8">
    <div class="card">
      <div class="card-header">
        <h1>@Model.Character.Name</h1>
      </div>

      <div class="card-body text-center">
        <img class="card-img-top" src="@imagePath" asp-append-version="true"/>

        <h4>TodoItem ID : @Model.Character.CharacterId</h4>
        <h4>Name : @Model.Character.Name</h4>

      </div>
      <div class="card-footer text-center">
        <a asp-controller="home" asp-action="index" 
           class="btn btn-primary">Back</a>
        <a asp-controller="home" asp-action="edit" asp-route-id="@Model.Character.CharacterId"
           class="btn btn-primary">Edit</a>
        <a href="#" class="btn btn-danger">Delete</a>
      </div>
    </div>
  </div>
</div>

@section Scripts {
  <script src="~/js/CustomScript.js"></script>
}