@model IEnumerable<Character>

@{
  ViewBag.PageTitle = "User Account List";
}


  <div class="card-deck">
    @foreach (var item in Model)
    {
      var imagePath = "~/images/" + ("banner.jpg");

      <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
        <div class="card-header">
          <h3>@item.Name</h3>
        </div>
        <img class="card-img-top" ImageThumbnail src="@imagePath" asp-append-version="true" />
        <div class="card-footer text-center">
          <a asp-controller="home" asp-action="details" asp-route-id="@item.CharacterId"
             class="btn btn-primary m-1">View</a>
          <a asp-controller="home" asp-action="edit" asp-route-id="@item.CharacterId"
             class="btn btn-primary m-1">Edit</a>
          <a href="#" class="btn btn-danger m-1">Delete</a>
        </div>
      </div>
    }
  </div>
